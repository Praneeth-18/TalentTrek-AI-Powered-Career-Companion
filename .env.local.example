# TalentTrek Job Portal - Environment Variables
# Copy this file to .env.local and fill in your values

# Database Connection
# Replace with your AWS RDS endpoint or local PostgreSQL connection
# IMPORTANT: Use ttadmin user for AWS RDS, not postgres
DATABASE_URL="postgresql://ttadmin:yourpassword@your-aws-rds-endpoint:5432/joblistingsportal"

# AWS Cognito Configuration
# Replace with your AWS Cognito User Pool details
NEXT_PUBLIC_USER_POOL_ID="us-east-2_XXXXXXXX"
NEXT_PUBLIC_USER_POOL_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_AWS_REGION="us-east-2"

# Resume Service Configuration
# URL for the resume customization service
RESUME_SERVICE_URL="http://localhost:8000"

# JWT Secret for token signing
# Generate a strong random string for production
JWT_SECRET="your-secure-jwt-secret"

# Optional: Debug settings
# DEBUG=true
# LOG_LEVEL=debug
